import React from 'react';

// Single Slide

const SingleSlide = props => (
  <div style={{
    width: '15%',
  }}>
    <img src={props.image} style={{
      width: '100%',
      height: '100%',
      cursor: 'pointer',
    }} onClick={props.clickHandler} index={props.index}/>
  </div>
);


export default SingleSlide;







import React from 'react';


// Prev and Next buttons
const Controls = props => (

      <div className="controls">
        <div className="prev" onClick={props.togglePrevious}>&#10094;</div>
        <div className="next" onClick={props.toggleNext}>&#10095;</div>
        {props.images.map((image, i) => <div className="column" key={i}>
          <img className="demo cursor" src={image} index={i} onClick={props.clickHandler}/>
        </div>)}
      </div>
    );