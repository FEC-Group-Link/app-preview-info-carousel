  togglePrevious = () => {
    console.log("toggleprevious click!");
    console.log(this.state.currentSlide);
    if (this.state.currentSlide !== 0) {
      this.setState({
        currentSlide: this.state.currentSlide - 1,
      });
    }
  }

  // togglePrevious = () => {
  //   console.log("toggleprevious click!");
  //   var current = this.state.currentSlide;
  //   var previous = current - 1;
  //   if (previous < 0) {
  //     previous = this.state.images.length - 1;
  //   }
  //   this.setState({
  //     currentSlide: previous
  //   })
  // }

  toggleNext = () => {
    console.log("togglenext click!");
    console.log(this.state.currentSlide)
    if (this.state.currentSlide !== this.state.images.length - 1) {
      this.setState({
        currentSlide: this.state.currentSlide + 1,
      });
    }
  }

  // toggleNext = () => {
  //   console.log("togglenext click!");
  //   var current = this.state.currentSlide;
  //   var next = current + 1;
  //   if (next > this.state.images.length - 1) {
  //     next = 0;
  //   }
  //   this.setState({
  //     currentSlide: next
  //   })
  // }







